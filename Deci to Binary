#include<stdio.h>
void converter(int);
int main()
{
    int n;
    printf("enter the number to convert:");
    scanf("%d",&n);
    if(n>=0)
    {
        converter(n);
    }
    else
    {
        printf("the entered number is negative\n");
    }
}
void converter(int n)
{
    int a[10],i;
    for(i=0;n>0;i++)
    {
        a[i]=n%2;
        n=n/2;
    }
    printf("the binary of the entered number is:");
    
    //    I am still learning on what this code does 
    
    for(i=i-1;i>=0;i--)
    {
        printf("%d",a[i]);
    }
    printf("\n\n");
} 
 
