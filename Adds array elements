//This code dynamically takes in input and adds up the elements

#include <stdio.h>

int main()
{

	int n;
	int arr[n];
	int i;
	int sum = 0;
	printf("Enter size of array\n");
	scanf("%d", &n);
	printf("enter elements of array\n");
	for (int i = 0; i < n; i++)
	{
		scanf("%d", &arr[i]);
	}
	printf("The entered elements are\n");
	for (i = 0; i < n; i++)
	{
		printf("%d ", arr[i]);
		// printf("\n");
	}
	for (i = 0; i < n; i++)
	{
		sum += arr[i];
	}
	printf("sum of the elements are %d\n", sum);
}
